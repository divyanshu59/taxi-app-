<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="ws.wolfsoft.kwiktaxi.ActivationCodeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <include layout="@layout/activation_toolbar"/>

        <customfonts.TextViewSFProDisplayLight
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:letterSpacing="0.0265"
            android:text="Enter the 6-digit code sent to you at"
            android:textColor="#8e8e93"
            android:gravity="center"
            android:layout_marginTop="40dp"/>


        <customfonts.TextViewSFProDisplayMedium
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="0553 516 183"
            android:textSize="15sp"
            android:letterSpacing="0.0265"
            android:gravity="center"
            android:layout_marginTop="5dp"/>
        <com.mukesh.OtpView
            android:id="@+id/otp_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textColor="@color/black"
            android:layout_marginTop="47dp"
            android:layout_gravity="center"/>





    </LinearLayout>


    <View
        android:layout_above="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f1f1f1"/>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="18dp"
        android:background="#f8f8f8"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <customfonts.TextViewSFProDisplayMedium

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_gravity="center"
            android:textColor="#8e8e93"
            android:gravity="center"
            android:textSize="14sp"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_next_arrow"
            android:rotation="180"
            android:layout_gravity="right|center"
            />

        </FrameLayout>


    </LinearLayout>




</RelativeLayout>
