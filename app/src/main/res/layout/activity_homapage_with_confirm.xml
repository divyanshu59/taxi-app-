<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ws.wolfsoft.kwiktaxi.HomePageActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:paddingTop="27dp"
            android:orientation="horizontal">


            <customfonts.TextViewSFProDisplayBlack
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KWIK"
                android:textColor="@color/black"
                android:layout_marginRight="42dp"
                android:letterSpacing="0.0625"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linear1"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/car_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_car_1_black"/>


                    <LinearLayout
                        android:id="@+id/cart_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="6dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <customfonts.TextViewSFProDisplayRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="via"
                            android:textColor="#b4b4b4"/>
                        <customfonts.TextViewSFProDisplayRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="Sedan"
                            android:layout_marginLeft="3dp"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear2"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/train_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="9dp"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/ic_car2_gray"/>


                    <LinearLayout
                        android:visibility="invisible"
                        android:id="@+id/train_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="16dp"
                        android:orientation="horizontal">

                        <customfonts.TextViewSFProDisplayRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="via"
                            android:textColor="#b4b4b4"/>
                        <customfonts.TextViewSFProDisplayRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="Swift"
                            android:layout_marginLeft="3dp"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear3"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/walk_men_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/ic_car3_gray"/>


                    <LinearLayout
                        android:visibility="invisible"
                        android:id="@+id/walk_men_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal">

                        <customfonts.TextViewSFProDisplayRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="via"
                            android:textColor="#b4b4b4"/>
                        <customfonts.TextViewSFProDisplayRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="Creta"
                            android:layout_marginLeft="3dp"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="26dp"
            android:layout_marginLeft="6.5dp"
            android:paddingBottom="13sp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="2.5dp"
                        android:layout_marginLeft="1dp"
                        android:src="@drawable/ic_button"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <customfonts.TextViewSFProDisplayRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="Your Location"
                                android:textSize="13.5sp"/>

                            <customfonts.TextViewSFProDisplayRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="9sp"
                                android:text="Topkapi museum"
                                android:textColor="#b4b4b4"/>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="6.5sp"
                            android:background="@color/view_line"/>


                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15sp"
                    android:layout_marginBottom="10sp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/ic_map_pin"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <customfonts.TextViewSFProDisplayRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="Vadodara Railway station"
                                android:textSize="14sp"/>

                        </LinearLayout>



                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/ic_tripicon"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"/>



        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="horizontal">




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <fragment
                            android:id="@+id/map2"
                            android:name="com.google.android.gms.maps.MapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:tint="@color/black"
                            android:layout_gravity="right"
                            android:layout_marginRight="12dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/locationup"/>

                        <!--<ImageView-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:layout_gravity="end"-->
                        <!--android:src="@drawable/gradient2"/>-->



                    </FrameLayout>

                </LinearLayout>







            </LinearLayout>
        </LinearLayout>



    </LinearLayout>





    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="280dp"
      android:orientation="vertical"
      android:layout_alignParentBottom="true"
      android:background="@color/white">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="15dp"
          android:orientation="vertical">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="2dp"
              android:layout_marginLeft="16dp"
              android:layout_marginRight="26dp"
              android:orientation="horizontal">


              <customfonts.TextViewSFProDisplayMedium
                  android:layout_weight="1"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:text="Capacity"
                  android:textColor="@color/black"
                  android:textSize="14sp"/>

              <customfonts.TextViewSFProDisplayRegular
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="4 People"
                  android:textColor="#5a595e"
                  android:textSize="14sp"/>
          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="16dp"
              android:layout_marginRight="26dp"
              android:layout_marginTop="3.5dp"
              android:orientation="horizontal">


              <customfonts.TextViewSFProDisplayMedium
                  android:layout_weight="1"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:text="Fare"
                  android:textColor="@color/black"
                  android:textSize="14sp"/>

              <customfonts.TextViewSFProDisplayRegular
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="₹113.56"
                  android:textColor="#5a595e"
                  android:textSize="14sp"/>
          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="16dp"
              android:layout_marginRight="26dp"
              android:layout_marginTop="3.5dp"
              android:orientation="horizontal">


              <customfonts.TextViewSFProDisplayMedium
                  android:layout_weight="1"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:text="Per minute wait time"
                  android:textColor="@color/black"
                  android:textSize="14sp"/>

              <customfonts.TextViewSFProDisplayRegular
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="₹1.07"
                  android:textColor="#5a595e"
                  android:textSize="14sp"/>
          </LinearLayout>

          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="#f1f1f1"
              android:layout_marginRight="15dp"
              android:layout_marginLeft="15dp"
              android:layout_marginTop="10dp"/>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="16dp"
              android:layout_marginRight="26dp"
              android:layout_marginTop="12dp"
              android:orientation="horizontal">


              <customfonts.TextViewSFProDisplayMedium
                  android:layout_weight="1"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:text="Total Fair"
                  android:textColor="@color/black"
                  android:textSize="14sp"/>

              <customfonts.TextViewSFProDisplayRegular
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="₹125.56"
                  android:textColor="@color/black"
                  android:textSize="14sp"/>
          </LinearLayout>


          <customfonts.TextViewSFProDisplayRegular
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="The fair will be the price presented upon  booking, or, if the journey changes, the fair will be based on the rated provided."
              android:textColor="#838383"
              android:layout_marginLeft="16dp"
              android:layout_marginRight="26dp"
              android:layout_marginTop="20dp"
              android:layout_marginBottom="15dp"
              android:letterSpacing="0.0325"
              android:lineSpacingExtra="2dp"
              android:textSize="12.5sp"/>


          <customfonts.Button_SF_Pro_Display_Medium
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:textSize="14sp"
              android:textColor="@color/white"
              android:text="Conform And Go"
              android:textAllCaps="false"
              android:layout_marginTop="10dp"
              android:layout_marginRight="5dp"
              android:layout_marginLeft="5dp"
              android:background="@drawable/button_gradient"/>
      </LinearLayout>
  </LinearLayout>



</RelativeLayout>