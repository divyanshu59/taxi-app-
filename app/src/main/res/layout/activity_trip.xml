<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@color/bg_clolor"
    tools:context="ws.wolfsoft.kwiktaxi.TripActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="30dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginTop="13dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_left_arrow"
                android:layout_gravity="center"
                android:rotation="180"/>


            <customfonts.TextViewSFProDisplaySemibold

                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Recent Trips"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"/>




        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f1f1f1"/>




        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="8dp">



            <LinearLayout
                android:id="@+id/dark_linear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_dark_rect"
                android:orientation="vertical">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:scaleType="centerCrop"
                        android:alpha="0.2"
                        android:background="@drawable/cardmapbg"/>


                <LinearLayout
                    android:id="@+id/white_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="13sp"

                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <customfonts.TextViewSFProDisplayLight
                                android:id="@+id/via"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="via"
                                android:textSize="11sp"
                                android:textColor="@color/white"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <customfonts.TextViewSFProDisplayMedium
                                    android:id="@+id/car"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    android:text="Sedan"/>


                                <ImageView
                                    android:id="@+id/car_image"
                                    android:layout_width="35dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/ic_car"/>
                            </LinearLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <customfonts.TextViewSFProDisplayRegular
                                android:id="@+id/date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date:"
                                android:textSize="10sp"
                                android:textColor="@color/white"/>

                            <customfonts.TextViewSFProDisplayMedium
                                android:id="@+id/date_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="11.5sp"
                                android:text="05.8.2017"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="0.3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <customfonts.TextViewSFProDisplayRegular
                                android:id="@+id/clock"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Clock:"
                                android:textSize="10sp"
                                android:textColor="@color/white"/>

                            <customfonts.TextViewSFProDisplayMedium
                                android:id="@+id/clock_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="11.5sp"
                                android:text="14:53"/>
                        </LinearLayout>



                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22sp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">


                        <customfonts.TextViewSFProDisplaySemibold
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ahmedabad\nRing Road"
                            android:lineSpacingExtra="2dp"
                            android:textSize="15sp"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                </LinearLayout>





                </FrameLayout>



            </LinearLayout>

        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="23dp"
                android:orientation="horizontal">


                <customfonts.TextViewSFProDisplayMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#545454"
                    android:textSize="14sp"
                    android:text="Trip Details : "/>


                <customfonts.TextViewSFProDisplayMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7/6/2019"
                    android:textSize="14sp"
                    android:textColor="#1072c6"/>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="7sp"
                android:background="#f1f1f1"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

            <customfonts.TextViewSFProDisplayMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginLeft="27dp"
                android:text="From"
                android:layout_marginTop="18dp"/>

            <customfonts.TextViewSFProDisplayMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24, Maindros main road, More colony, Rajendra\nSociety, behind shreepal society, Vadodara"
                android:textSize="12sp"
                android:letterSpacing="0.0165"
                android:textColor="#545454"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="10sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12sp"
                android:background="#f1f1f1"/>


            <customfonts.TextViewSFProDisplayMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginLeft="27dp"
                android:text="To"
                android:layout_marginTop="15dp"/>

            <customfonts.TextViewSFProDisplayMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inorbit Mall, genda circle, near Vadodara Central,\nVadodara"
                android:textSize="12sp"
                android:layout_marginLeft="28dp"
                android:textColor="#545454"
                android:layout_marginTop="10sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="14sp"
                android:background="#f1f1f1"/>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20sp"
                android:background="#f1f1f1"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="32dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/car"/>


                <customfonts.TextViewSFProDisplayMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_marginLeft="12sp"
                    android:text="Your ride with Arvind Singh"
                    android:layout_gravity="center"/>
            </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:background="#f1f1f1"/>



            <customfonts.TextViewSFProDisplayMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="30dp"/>




            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10sp"
                android:background="#f1f1f1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">



            <customfonts.TextViewSFProDisplayMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Problem with calcellation fee"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="18dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="18sp"
                android:background="#f1f1f1"/>

            <customfonts.TextViewSFProDisplayMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I was involved in an accident"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="20dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="18sp"
                android:background="#f1f1f1"/>
            <customfonts.TextViewSFProDisplayMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Review my fare or fees"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="20dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="18sp"
                android:background="#f1f1f1"/>

            <customfonts.TextViewSFProDisplayMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My driver was unprofessional"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="20dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="18sp"
                android:background="#f1f1f1"/>

            <customfonts.TextViewSFProDisplayMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I had a different issue"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="20dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="18sp"
                android:background="#f1f1f1"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    </ScrollView>

        </LinearLayout>




    </FrameLayout>


</LinearLayout>
