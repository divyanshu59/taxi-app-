<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">





        <LinearLayout
            android:id="@+id/dark_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_dark_rect"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/bgimage"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:alpha="0.2"
                    android:background="@drawable/cardmapbg"/>



    <LinearLayout
        android:id="@+id/white_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="13sp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <customfonts.TextViewSFProDisplayLight
                    android:id="@+id/via"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="via"
                    android:textSize="11sp"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <customfonts.TextViewSFProDisplayMedium
                        android:id="@+id/car"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:text="Sedan"/>


                    <ImageView
                        android:id="@+id/car_image"
                        android:layout_width="35dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_car"/>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <customfonts.TextViewSFProDisplayRegular
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date:"
                    android:textSize="10sp"
                    android:textColor="@color/black"/>

                <customfonts.TextViewSFProDisplayMedium
                    android:id="@+id/date_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="11.5sp"
                    android:text="05.8.2017"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <customfonts.TextViewSFProDisplayRegular
                    android:id="@+id/clock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clock:"
                    android:textSize="10sp"
                    android:textColor="@color/black"/>

                <customfonts.TextViewSFProDisplayMedium
                    android:id="@+id/clock_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="11.5sp"
                    android:text="14:53"/>
            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22sp"
            android:layout_marginLeft="7dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">


            <customfonts.TextViewSFProDisplaySemibold
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ahmedabad\nRing Road"
                android:lineSpacingExtra="2dp"
                android:textSize="15sp"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>

            </FrameLayout>

        </LinearLayout>




    </FrameLayout>


</LinearLayout>